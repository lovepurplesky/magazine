/* components/article/cmp.wxss */
.container{
    background-color:#fff;
}
.mark-container{
    padding:20rpx;
}
.avatar{
    width:60rpx;
    height:60rpx;
    border-radius: 50%;
    margin-right:20rpx;
    vertical-align: middle;
}
.text{
    font-size:28rpx;
    color:#666;
}
.control-container{
    display:flex;
    justify-content: space-between;
    align-items:center;
    padding:20rpx;
    margin-top:10rpx;
}
.control-box{
    display:flex;
}
/* 自定义组件不设置为display block，有的css值无法设置 */
.box{
    display:block;
    margin-left:25rpx;
}
.img-btn image{
    width:50rpx;
    height:50rpx;
    margin-bottom:10rpx;
    margin-right:10rpx;
}