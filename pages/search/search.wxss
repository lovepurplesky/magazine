/* pages/search/search.wxss */
.recommend-container{
    width:700rpx;
    margin:70rpx auto;
    padding-top:70rpx;
    padding-bottom:70rpx;
    border-top:1px solid #000;
    border-bottom:1px solid #000;
}
.word{
    font-size:50rpx;
    margin-bottom:50rpx;
}
.recommend-list{
    font-size:24rpx;
}
.recommend{
    margin-top:10rpx;
}
.loading-container{
    position:fixed;
    left:0;
    top:0;
    width:100%;
    height:100%;
    background-color: #fff;
  }
  .loading{
    position: absolute;
    top:50%;
    left:50%;
    margin-top:-30rpx;
    margin-left:-30rpx;
  }